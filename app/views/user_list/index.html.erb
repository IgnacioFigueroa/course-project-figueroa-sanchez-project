<%=javascript_include_tag 'profiles.js' %>
<div class="d-lg-flex p-3 justify-content-md-center">
  <div class="jumbotron" style="width:100%">
    <br>
    <table class="table table-striped">
      <thead>
      <th>Role</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Last access</th>
      <th></th>
      </thead>
      <tbody>
      <% @users_info.each do |user| %>
        <tr>
          <% case %>
          <% when user["role"] == 1 && user["is_active"] %>
            <td class="align-center"><i class="fas fa-user fa-3x"></i></td>
          <% when user["role"] == 1 && (not user["is_active"]) %>
            <td class="align-center"><i class="fas fa-user-slash fa-3x"></i></td>
          <% when user["role"] == 2 %>
            <td class="align-center"><i class="fas fa-user-cog fa-3x"></i></td>
          <% when user["role"] == 3 %>
            <td class="align-center"><i class="fas fa-user-shield fa-3x"></i></td>
          <% end %>
          <td><%= user["first_name"] %></td>
          <td><%= user["last_name"] %></td>
          <td><%= user["email"] %></td>
          <td><%= user["last_access"] %></td>
          <% if user["role"] == 1 %>
            <td>
              <% if user["id"] != current_user.id && user["role"] == 1 %>
                <button class="btn btn-outline-primary edit-button" data-target="#edit-modal" data-value="<%= user["id"] %>" data-toggle="modal">Edit</button>
                <%= link_to 'Delete', user_path(user["id"]), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-outline-danger" %>
              <% end %>
            </td>
          <% else %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="modal fadeIn" id="edit-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Edit User</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <%= form_tag("/users/" + current_user.id.to_s, method: "PUT") do |form| %>
          <div class="form-group">
            <input class="form-control" type="hidden" name="user[id]" value="nil" id="id">
          </div>

          <div class="form-group">
            <label for="user[email]">Email</label>
            <%= text_field(:user, :email, class: "form-control") %>
          </div>

          <div class="form-group">
            <label for="user[password]">Password</label>
            <%= text_field(:user, :password, class: "form-control") %>
          </div>

          <div class="form-check">
            <label for="user[is_active]">
              <input type="checkbox" class="form-check-input" name="user[is_active]" id="user_is_active"> Is active?
            </label>
          </div>

          <div class="actions">
            <%= submit_tag("Update", :class=>"btn btn-outline-primary") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>