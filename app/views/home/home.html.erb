<div class="container justify-content-md-center">
  <div class="jumbotron">
    <div class="justify_content-md-center">
      <p><h4>Posts</h4></p>

    </div>
    <ul class="nav nav-tabs" id="homeTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" href="#top20posts" id="top20posts-tab" role="tab" data-toggle="tab" aria-controls="top20posts" aria-selected="true">All</a>
      </li>
      <% unless current_user.nil? %>
      <li class="nav-item">
            <a class="nav-link" href="#followingposts" id="followingposts-tab" role="tab" data-toggle="tab" aria-controls="followingposts" aria-selected="false">Following</a>
      </li>
      <% end %>
    </ul>
    <div class="tab-content" id="homeTabContent">
      <div class="tab-pane fade show active list-group" id="top20posts" role="tabpanel" aria-labelledby="top20posts-tab" >
        <% if @top_20_post %>
          <% @top_20_post.each do |post| %>
            <a href="/posts/<%= post['id'] %>" class="list-group-item list-group-item-action">
              <div class="media-body">
                <div class="media mt-3">
                  <% if post["author_image"].attached? %>
                    <%= image_tag(post["author_image"], :class => "avatar img-circle img-thumbnail", :alt => "avatar", :size => "50x50") %>
                  <% else %>
                    <img src="https://i.stack.imgur.com/34AD2.jpg" class="avatar img-circle img-thumbnail" alt="avatar" height="60" width="60">
                  <% end %>
                  <div class="media-body">
                    <h5 class="mt-0"><%= post["title"] %></h5>
                    <div class="row">
                      <div class="col-md-11">
                        <%= post["description"] %>
                      </div>
                      <div class="col-md-1">
                        <% if post['solved'] %>
                          <i class="fas fa-check fa-2x"></i>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <small><%= post['date'] %></small>
                </div>
                <div class="row">
                  <div class="col-md-10">
                  </div>
                  <div class="col-md-1">
                    <small>
                      <%= post['votes']['up']%> <i class="fas fa-thumbs-up "></i>
                    </small>
                  </div>
                  <div class="col-md-1">
                    <small>
                      <%= post['votes']['down'] %> <i class="fas fa-thumbs-down "></i>
                    </small>
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        <% else %>
          <p><h5>Doesn't exist any post</h5></p>
        <% end %>
      </div>
      <div class="tab-pane fade list-group" id="followingposts" role="tabpanel" aria-label="followingposts-tab">
        <% if @following_posts.length > 0 %>
          <% @following_posts.each do |post| %>
            <a href="/posts/<%= post['id'] %>" class="list-group-item list-group-item-action">
              <div class="media-body">
                <div class="media mt-3">
                  <% if post["author_image"].attached? %>
                    <%= image_tag(post["author_image"], :class => "avatar img-circle img-thumbnail", :alt => "avatar", :size => "50x50") %>
                  <% else %>
                    <img src="https://i.stack.imgur.com/34AD2.jpg" class="avatar img-circle img-thumbnail" alt="avatar" height="60" width="60">
                  <% end %>
                  <div class="media-body">
                    <h5 class="mt-0"><%= post["title"] %></h5>
                    <div class="row">
                      <div class="col-md-11">
                        <%= post["description"] %>
                      </div>
                      <div class="col-md-1">
                        <% if post['solved'] %>
                          <i class="fas fa-check fa-2x"></i>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <small><%= post['date'] %></small>
                </div>
                <div class="row">
                  <div class="col-md-10">
                  </div>
                  <div class="col-md-1">
                    <small>
                      <%= post['votes']['up']%> <i class="fas fa-thumbs-up "></i>
                    </small>
                  </div>
                  <div class="col-md-1">
                    <small>
                      <%= post['votes']['down'] %> <i class="fas fa-thumbs-down "></i>
                    </small>
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        <% else %>
          <p>
            <h5>
              You don't have any <strong>following posts</strong>.
            </h5>
          </p>

        <% end %>
      </div>
    </div>
  </div>
</div>