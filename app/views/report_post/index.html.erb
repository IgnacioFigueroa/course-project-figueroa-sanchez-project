<div class="container">
  <div class="d-lg-flex p-2 justify-content-md-center">
    <div class="jumbotron">
      <h2>Report Post</h2>
      <small class="">Please, enter the category of the report and a short description.</small>
      <hr class="my-4">
      <form>
        <div class="form-check">
          <input type="radio" name="report-radios" class="form-check-input" id="checkbox-inappropriate-content">
          <label for="checkbox-inappropriate-content">Inappropriate content</label>
        </div>
        <div class="form-check">
          <input type="radio" name="report-radios" class="form-check-input" id="checkbox-spam">
          <label for="checkbox-spam">Spam</label>
        </div>
        <div class="form-check">
          <input type="radio" name="report-radios" class="form-check-input" id="checkbox-personal-advertising">
          <label for="checkbox-personal-advertising">Personal advertising</label>
        </div>
        <div class="form-check">
          <input type="radio" name="report-radios" class="form-check-input" id="checkbox-sexual-harassment">
          <label for="checkbox-sexual-harassment">Sexual harassment</label>
        </div>
        <div class="form-check">
          <input type="radio" name="report-radios" class="form-check-input" id="checkbox-other">
          <label for="checkbox-other">Other</label>
        </div>
        <div class="form-group">
          <label for="report-description">Report description</label>
          <textarea type="text" class="form-control" rows="2" id="report-description"></textarea>
        </div>
        <button href="#" class="btn btn-outline-warning btn-block">Create report</button>
      </form>
    </div>
  </div>
</div>

